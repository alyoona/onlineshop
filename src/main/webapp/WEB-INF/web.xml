<web-app>
    <!--Filters-->
    <filter>
        <filter-name>RequestFilter</filter-name>
        <filter-class>com.stroganova.onlineshop.web.filter.RequestFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.stroganova.onlineshop.web.filter.SecurityFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AdminRoleFilter</filter-name>
        <filter-class>com.stroganova.onlineshop.web.filter.AdminRoleFilter</filter-class>
    </filter>

    <!--Servlets-->
    <servlet>
        <servlet-name>AssetsServlet</servlet-name>
        <servlet-class>com.stroganova.onlineshop.web.servlet.AssetsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductsServlet</servlet-name>
        <servlet-class>com.stroganova.onlineshop.web.servlet.ProductsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProductServlet</servlet-name>
        <servlet-class>com.stroganova.onlineshop.web.servlet.AddProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.stroganova.onlineshop.web.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.stroganova.onlineshop.web.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.stroganova.onlineshop.web.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>com.stroganova.onlineshop.web.servlet.CartServlet</servlet-class>
    </servlet>

    <!--Filter mappings-->
    <filter-mapping>
        <filter-name>RequestFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/products</url-pattern>
        <url-pattern>/products/add</url-pattern>
        <url-pattern>/cart</url-pattern>
        <url-pattern>/logout</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminRoleFilter</filter-name>
        <url-pattern>/products/add</url-pattern>
    </filter-mapping>

    <!--Servlet mappings-->
    <servlet-mapping>
        <servlet-name>AssetsServlet</servlet-name>
        <url-pattern>/assets/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductsServlet</servlet-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

</web-app>